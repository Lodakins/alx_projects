apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-app
  labels:
    app: my-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: my-app
  template:
    metadata:
      labels:
        app: node-app
    spec:
      containers:
      - name: simple-node
        image: lodakins/simple-node
        ports:
        - containerPort: 80

        aws iam create-role --role-name KubernetesAdmin  --description "Kubernetes administrator role (for AWS IAM Authenticator for Kubernetes)." --assume-role-policy-document "$POLICY" --output text --query 'Role.Arn'